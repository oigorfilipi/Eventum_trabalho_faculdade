<%- include('partials/header', { title: 'Cadastro' }) %>

    <div class="container">

        <div class="form-container form-container-wide">
            <%# Deixa o form mais largo %>
                <h2>Cadastro</h2>

                <form action="/site/register" method="POST" id="register-form">

                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="flash-message error" style="margin-bottom: 1rem;">
                            <%= error %>
                        </div>
                        <% } %>

                            <div class="form-group">
                                <label for="nome_completo">Nome Completo:</label>
                                <input type="text" id="nome_completo" name="nome_completo" class="form-control"
                                    required>
                            </div>

                            <div class="form-group">
                                <label for="name">Nome Social (Como prefere ser chamado):</label>
                                <input type="text" id="name" name="name" class="form-control" required>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" id="email" name="email" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Senha (Mínimo 6 dígitos):</label>
                                    <input type="password" id="password" name="password" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="phone">Telefone:</label>
                                    <input type="tel" id="phone-mask" name="phone" class="form-control"
                                        placeholder="(00) 0 0000-0000" required>
                                </div>
                                <div class="form-group">
                                    <label for="cpf">CPF:</label>
                                    <input type="text" id="cpf-mask" name="cpf" class="form-control"
                                        placeholder="000.000.000-00" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="data_nascimento">Data de Nascimento:</label>
                                    <input type="date" id="data_nascimento" name="data_nascimento" class="form-control"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label for="sexo">Sexo:</label>
                                    <select id="sexo" name="sexo" class="form-control">
                                        <option value="">-- Selecione --</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Feminino">Feminino</option>
                                        <option value="NaoInformar">Prefiro não informar</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="genero">Gênero (Opcional):</label>
                                    <input type="text" id="genero" name="genero" class="form-control"
                                        placeholder="Como você se identifica?">
                                </div>
                                <div class="form-group">
                                    <label for="cor">Cor/Raça:</label>
                                    <select id="cor" name="cor" class="form-control">
                                        <option value="">-- Selecione --</option>
                                        <option value="Branca">Branca</option>
                                        <option value="Preta">Preta</option>
                                        <option value="Parda">Parda</option>
                                        <option value="Amarela">Amarela</option>
                                        <option value="Indigena">Indígena</option>
                                        <option value="NaoInformar">Prefiro não informar</option>
                                    </select>
                                </div>
                            </div>

                            <hr class="form-divider">

                            <%# --- SIMULAÇÃO DO RECAPTCHA ("Grandinho") --- %>
                                <div class="form-group">
                                    <div class="recaptcha-simulated-box-large">
                                        <input type="checkbox" id="recaptcha-check" required>
                                        <label for="recaptcha-check">Eu não sou um robô</label>
                                        <img src="https://www.gstatic.com/recaptcha/api2/logo_48.png" alt="reCAPTCHA">
                                    </div>
                                </div>

                                <button type="submit" class="btn-secondary" id="register-submit-btn">Cadastrar</button>
                </form>

                <p class="form-link">Já tem uma conta? <a href="/site/login">Faça Login</a></p>
        </div>

    </div>

    <%- include('partials/footer') %>