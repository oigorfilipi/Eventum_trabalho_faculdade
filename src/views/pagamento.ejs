<%# Arquivo: src/views/pagamento.ejs Página SIMULADA de pagamento. %>

    <%- include('partials/header', { title: 'Pagamento' }) %>

        <div class="container">
            <div class="form-container">

                <h1>Finalizar Inscrição</h1>
                <p>Você está se inscrevendo para: <strong>
                        <%= event.title %>
                    </strong></p>

                <div class="form-group" style="margin-top: 2rem;">
                    <label>Valor:</label>
                    <input type="text" class="form-control" value="<%= price %>" disabled>
                </div>

                <p style="color: var(--text-secondary); margin: 2rem 0;">
                    Este é um site de demonstração. Um sistema de pagamento real
                    (Pix, Cartão de Crédito) seria integrado aqui.
                </p>

                <%# Este formulário usa a rota POST /subscribe, exatamente como um evento gratuito. Em um app real, esta
                    rota só seria chamada APÓS o pagamento ser confirmado via Webhook. %>
                    <form action="/subscribe" method="POST">
                        <input type="hidden" name="eventId" value="<%= event.id %>">
                        <input type="hidden" name="userId" value="<%= user.id %>">
                        <button type="submit" class="btn btn-secondary">Confirmar Inscrição (Simulado)</button>
                    </form>

            </div>
        </div>

        <%- include('partials/footer') %>