<%# Arquivo: src/views/relatorio.ejs Página formatada para impressão (A4) %>
    <!DOCTYPE html>
    <html lang="pt-br">

    <head>
        <meta charset="UTF-8">
        <title>Relatório Geral - Eventum</title>
    </head>

    <body onload="window.print()">

        <div class="page">
            <h1>Relatório Geral - Eventum</h1>
            <p>Relatório gerado em: <%= new Date().toLocaleString('pt-BR') %>
            </p>

            <h2>Resumo Geral</h2>
            <div class="summary-grid">
                <div class="summary-card">
                    <strong>Usuários Totais</strong>
                    <span>
                        <%= reportData.geral.totalUsers %>
                    </span>
                </div>
                <div class="summary-card">
                    <strong>Eventos Ativos</strong>
                    <span>
                        <%= reportData.geral.totalEvents %>
                    </span>
                </div>
                <div class="summary-card">
                    <strong>Inscrições Ativas</strong>
                    <span>
                        <%= reportData.geral.totalActiveSubs %>
                    </span>
                </div>
                <div class="summary-card">
                    <strong>Inscrições Históricas</strong>
                    <span>
                        <%= reportData.geral.totalHistoricalSubs %>
                    </span>
                </div>
                <div class="summary-card">
                    <strong>Receita Total Estimada</strong>
                    <span>R$ <%= reportData.geral.totalRevenue.toFixed(2).replace('.', ',' ) %></span>
                </div>
            </div>

            <h2>Detalhamento por Evento</h2>
            <table>
                <thead>
                    <tr>
                        <th>Evento</th>
                        <th>Status</th>
                        <th>Preço (R$)</th>
                        <th>Inscritos / Vagas</th>
                        <th>Receita (R$)</th>
                    </tr>
                </thead>
                <tbody>
                    <% reportData.eventos.forEach(event=> { %>
                        <tr>
                            <td>
                                <%= event.title %>
                            </td>
                            <td>
                                <%= event.status %>
                            </td>
                            <td class="currency">
                                <%= event.price.toFixed(2).replace('.', ',' ) %>
                            </td>
                            <td>
                                <%= event.inscritos %> / <%= event.vagas %>
                            </td>
                            <td class="currency">
                                <%= event.receita.toFixed(2).replace('.', ',' ) %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>

    </body>

    </html>