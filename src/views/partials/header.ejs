            <button id="theme-toggle-btn" class="theme-toggle">
                ☀️ </button>

            <% if (user) { %>
                <span>Olá, <%= user.name %>!</span>
                <a href="/site/logout" class="logout-btn">Sair</a>
                <% } else { %>
                    <a href="/site/login">Login</a>
                    <a href="/site/register" class="btn">Cadastre-se</a>
