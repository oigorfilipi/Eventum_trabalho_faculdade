<% const ev=(typeof evento !=='undefined' ) ? evento : {}; %>

    <form action="<%= actionUrl %>" method="POST">

        <div style="margin-bottom: 1rem;">
            <label for="title">Título do Evento:</label>
            <input type="text" id="title" name="title" value="<%= ev.title || '' %>" required>
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="description">Descrição:</label>
            <textarea id="description" name="description" rows="5"
                style="width: 100%; padding: 0.75rem; background-color: var(--card-color); border: 1px solid var(--border-color); border-radius: 5px; color: var(--text-primary); font-size: 1rem; font-family: inherit;">
    <%= ev.description || '' %>
    </textarea>
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="date">Data (YYYY-MM-DD):</label>
            <input type="date" id="date" name="date" value="<%= ev.date || '' %>"
                style="width: 100%; padding: 0.75rem;">
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="qtdSubs">Limite de Inscrições:</label>
            <input type="number" id="qtdSubs" name="qtdSubs" value="<%= ev.qtdSubs || 100 %>" min="1" required
                style="width: 100%; padding: 0.75rem;">
        </div>

        <button type="submit" class="btn">Salvar Evento</button>
        <a href="/site/eventos" style="margin-left: 1rem; color: var(--text-secondary);">Cancelar</a>
    </form>