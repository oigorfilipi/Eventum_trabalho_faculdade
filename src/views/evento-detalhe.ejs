<%# Arquivo: src/views/evento-detalhe.ejs A nova p√°gina com todos os detalhes do evento. %>

    <%- include('partials/header', { title: event.title }) %>

        <div class="container">

            <%# Exibe mensagens de erro/sucesso (ex: da inscri√ß√£o) %>
                <% if (message) { %>
                    <div class="flash-message <%= message.type %>">

                        <%= message.text %>
                    </div>
                    <% } %>

                        <%# --- IMAGEM DA CAPA ADICIONADA --- %>
                            <% if (event.cover_image_url) { %>
                                <div class="event-cover-image">
                                    <img src="<%= event.cover_image_url %>" alt="Capa do Evento: <%= event.title %>">
                                </div>
                                <% } %>

                                    <div class.="event-detail-container">


                                        <h1>
                                            <%= event.title %>
                                        </h1>

                                        <div class="event-detail-card">
                                            <h2>Descri√ß√£o</h2>
                                            <p>
                                                <%= event.description || 'Este evento n√£o possui descri√ß√£o.' %>
                                            </p>
                                        </div>

                                        <%# --- O BOT√ÉO INTELIGENTE --- %>
                                            <div class="event-detail-card action-card">
                                                <% if (!user) { %>
                                                    <a href="/site/login" class="btn btn-secondary">Login para se
                                                        inscrever</a>

                                                    <% } else if (user.role==='admin' ) { %>

                                                        <%# --- CONTAGEM ADICIONADA --- %>
                                                            <div class="admin-event-stats">
                                                                <strong>Inscritos:</strong>
                                                                <span>
                                                                    <%= currentSubCount %> / <%= event.qtdSubs || 'N/A'
                                                                            %>
                                                                </span>
                                                            </div>

                                                            <a href="/site/eventos/<%= event.id %>/editar"
                                                                class="btn btn-success">Editar como Admin</a>

                                                            <a href="/site/eventos/<%= event.id %>/excluir"
                                                                class="btn btn-danger" style="margin-top: 1rem;"
                                                                onclick="return confirm('Tem certeza que deseja excluir este evento? Esta a√ß√£o n√£o pode ser desfeita.');">
                                                                Excluir Evento
                                                            </a>

                                                            <% } else if (isSubscribed) { %>
                                                                <span class="btn-disabled">‚úì Inscrito</span>

                                                                <% } else if (event.pricing &&
                                                                    event.pricing.isFree==='false' ) { %>
                                                                    <%# Evento PAGO leva para a simula√ß√£o %>
                                                                        <a href="/site/pagamento/<%= event.id %>"
                                                                            class="btn btn-secondary">Inscrever-se
                                                                            (Pagamento)</a>

                                                                        <% } else { %>
                                                                            <%# Evento GRATUITO usa o formul√°rio de
                                                                                inscri√ß√£o normal %>
                                                                                <form action="/subscribe" method="POST">
                                                                                    <input type="hidden" name="eventId"
                                                                                        value="<%= event.id %>">
                                                                                    <input type="hidden" name="userId"
                                                                                        value="<%= user.id %>">
                                                                                    <button type="submit"
                                                                                        class="btn btn-secondary">Inscrever-se
                                                                                        (Gratuito)</button>
                                                                                </form>
                                                                                <% } %>
                                            </div>

                                            <%# --- Detalhes de Hor√°rio e Pre√ßo --- %>
                                                <div class="event-detail-card">
                                                    <h2>Informa√ß√µes</h2>
                                                    <% if (event.schedule) { %>
                                                        <div class="detail-item"><strong>In√≠cio:</strong>
                                                            <%= new
                                                                Date(event.schedule.date_start).toLocaleDateString('pt-BR',
                                                                {timeZone: 'UTC' }) %> √†s <%= event.schedule.time_start
                                                                    %>
                                                        </div>
                                                        <div class="detail-item"><strong>T√©rmino:</strong>
                                                            <%= new
                                                                Date(event.schedule.date_end).toLocaleDateString('pt-BR',
                                                                {timeZone: 'UTC' }) %> √†s <%= event.schedule.time_end %>
                                                        </div>
                                                        <% } %>
                                                            <% if (event.pricing) { %>
                                                                <div class="detail-item"><strong>Pre√ßo:</strong>
                                                                    <%= event.pricing.isFree==='true' ? 'Gratuito' :
                                                                        event.pricing.price %>
                                                                </div>
                                                                <% } %>
                                                                    <div class="detail-item"><strong>Vagas:</strong>
                                                                        <%= event.qtdSubs ? `Limitado a ${event.qtdSubs}
                                                                            pessoas` : 'Ilimitado' %>
                                                                    </div>

                                                                    %# --- ORGANIZADOR ADICIONADO --- %>
                                                                    <% if (event.organizer) { %>
                                                                        <div class="detail-item">
                                                                            <strong>Organizado por:</strong>
                                                                            <%= event.organizer %>
                                                                        </div>
                                                                        <% } %>

                                                                            <%# --- CATEGORIA ADICIONADA --- %>
                                                                                <% if (event.category && event.category
                                                                                    !=='Indefinido' ) { %>
                                                                                    <div class="detail-item">
                                                                                        <strong>Categoria:</strong>
                                                                                        <%= event.category %>
                                                                                    </div>
                                                                                    <% } %>

                                                                                        <%# --- AVISO DE EVENTO OCULTO
                                                                                            --- %>
                                                                                            <% if (event.is_hidden===1)
                                                                                                { %>
                                                                                                <div class="detail-item"
                                                                                                    style="color: var(--danger-color); font-weight: bold;">
                                                                                                    <strong>Status:</strong>
                                                                                                    üëÅÔ∏è Evento Oculto
                                                                                                </div>
                                                                                                <% } %>
                                                </div>

                                                <%# --- Detalhes do Endere√ßo --- %>
                                                    <% if (event.address && event.address.street) { %>
                                                        <div class="event-detail-card">
                                                            <h2>Localiza√ß√£o</h2>
                                                            <div class="detail-item">
                                                                <%= event.address.street %>, <%= event.address.number %>
                                                            </div>
                                                            <div class="detail-item">
                                                                <%= event.address.neighborhood %>
                                                            </div>
                                                            <div class="detail-item">CEP: <%= event.address.cep %>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                            <%# --- Detalhes das Atra√ß√µes (Palestras, Artistas) --- %>
                                                                <% if (event.attractionsData &&
                                                                    (event.attractionsData.palestras.length> 0 ||
                                                                    event.attractionsData.artistas.length > 0)) { %>
                                                                    <div class="event-detail-card">
                                                                        <h2>Atra√ß√µes</h2>

                                                                        <% if (event.attractionsData.palestras.length>
                                                                            0) { %>
                                                                            <h4>Palestras</h4>
                                                                            <% if
                                                                                (event.attractionsData.palestras_simultaneas)
                                                                                { %>
                                                                                <p><i>M√∫ltiplas palestras ocorrendo.
                                                                                        Hor√°rios a
                                                                                        confirmar no local.</i></p>
                                                                                <% } %>
                                                                                    <ul class="attraction-list">
                                                                                        <%
                                                                                            event.attractionsData.palestras.forEach(p=>
                                                                                            { %>
                                                                                            <li>
                                                                                                <strong>
                                                                                                    <%= p.nome %>
                                                                                                </strong> (<%=
                                                                                                    p.profissao %>)
                                                                                                    <% if
                                                                                                        (!event.attractionsData.palestras_simultaneas
                                                                                                        && p.horario) {
                                                                                                        %>
                                                                                                        - √†s <%=
                                                                                                            p.horario %>
                                                                                                            <% } %>
                                                                                            </li>
                                                                                            <% }) %>
                                                                                    </ul>
                                                                                    <% } %>

                                                                                        <% if
                                                                                            (event.attractionsData.artistas.length>
                                                                                            0) { %>
                                                                                            <h4>Artistas</h4>
                                                                                            <% if
                                                                                                (event.attractionsData.artistas_simultaneos)
                                                                                                { %>
                                                                                                <p><i>M√∫ltiplas atra√ß√µes
                                                                                                        ocorrendo.
                                                                                                        Hor√°rios a
                                                                                                        confirmar no
                                                                                                        local.</i></p>
                                                                                                <% } %>
                                                                                                    <ul
                                                                                                        class="attraction-list">
                                                                                                        <%
                                                                                                            event.attractionsData.artistas.forEach(a=>
                                                                                                            { %>
                                                                                                            <li>
                                                                                                                <strong>
                                                                                                                    <%= a.nome
                                                                                                                        %>
                                                                                                                </strong>
                                                                                                                (<%= a.descricao
                                                                                                                    %>)
                                                                                                                    <% if
                                                                                                                        (!event.attractionsData.artistas_simultaneos
                                                                                                                        &&
                                                                                                                        a.horario)
                                                                                                                        {
                                                                                                                        %>
                                                                                                                        -
                                                                                                                        √†s
                                                                                                                        <%= a.horario
                                                                                                                            %>
                                                                                                                            <% }
                                                                                                                                %>
                                                                                                            </li>
                                                                                                            <% }) %>
                                                                                                    </ul>
                                                                                                    <% } %>
                                                                    </div>
                                                                    <% } %>

                                    </div>
        </div>



        <%- include('partials/footer') %>