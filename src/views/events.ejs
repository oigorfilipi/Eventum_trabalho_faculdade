<%- include('partials/header', { title: 'Nossos Eventos' }) %>

    <div class="container">
        <% if (message) { %>
            <div class="flash-message <%= message.type %>">
                <%= message.text %>
            </div>
            <% } %>

                <h1>Pr√≥ximos Eventos</h1>

                <div class="event-list">

                    <% events.forEach(event=> { %>
                        <div class="event-card">

                            <%# --- 1. ADICIONE ESTE BLOCO DA IMAGEM --- %>
                                <% if (event.cover_image_url) { %>
                                    <a href="/site/eventos/<%= event.id %>" class="event-card-image-link"
                                        aria-hidden="true" tabindex="-1">
                                        <img src="<%= event.cover_image_url %>" alt="" class="event-card-image-novo">
                                    </a>
                                    <% } %>
                                        <%# --- FIM DO BLOCO DA IMAGEM --- %>

                                            <%# --- TAG DE CATEGORIA ADICIONADA --- %>
                                                <% if (event.category && event.category !=='Indefinido' ) { %>
                                                    <span class="event-card-category">
                                                        <%= event.category %>
                                                    </span>
                                                    <% } %>

                                                        <%# --- AVISO DE EVENTO OCULTO --- %>
                                                            <% if (event.is_hidden===1) { %>
                                                                <span class="event-card-hidden">üëÅÔ∏è Oculto</span>
                                                                <% } %>

                                                                    <%# CORRE√á√ÉO: O t√≠tulo agora √© um link %>
                                                                        <a href="/site/eventos/<%= event.id %>"
                                                                            class="event-title-link">
                                                                            <h3>
                                                                                <%= event.title %>
                                                                            </h3>
                                                                        </a>
                                                                        <%# --- IN√çCIO DO NOVO BLOCO DE DETALHES --- %>
                                                                            <div class="event-details">
                                                                                <% if (event.schedule) { %>
                                                                                    <div class="detail-item">
                                                                                        üóìÔ∏è <strong>In√≠cio:</strong>
                                                                                        <%= event.schedule.date_start ?
                                                                                            new
                                                                                            Date(event.schedule.date_start).toLocaleDateString('pt-BR',
                                                                                            {timeZone: 'UTC' }) : 'Data'
                                                                                            %>
                                                                                            <%= event.schedule.time_start
                                                                                                ? ` √†s
                                                                                                ${event.schedule.time_start}`
                                                                                                : '' %>
                                                                                    </div>
                                                                                    <% if (event.schedule.date_end) { %>
                                                                                        <div class="detail-item">
                                                                                            üóìÔ∏è <strong>Fim:</strong>
                                                                                            <%= new
                                                                                                Date(event.schedule.date_end).toLocaleDateString('pt-BR',
                                                                                                {timeZone: 'UTC' }) %>
                                                                                                <%= event.schedule.time_end
                                                                                                    ? ` √†s
                                                                                                    ${event.schedule.time_end}`
                                                                                                    : '' %>
                                                                                        </div>
                                                                                        <% } %>
                                                                                            <% } %>

                                                                                                <% if (event.pricing &&
                                                                                                    event.pricing.isFree==='false'
                                                                                                    ) { %>
                                                                                                    <div
                                                                                                        class="detail-item">
                                                                                                        üí∞
                                                                                                        <strong>Pre√ßo:</strong>
                                                                                                        <%= event.pricing.price
                                                                                                            || 'Consultar valor'
