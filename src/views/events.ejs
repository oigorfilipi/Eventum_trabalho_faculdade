<%- include('partials/header', { title: 'Nossos Eventos' }) %>

    <div class="container">
        <% if (message) { %>
            <div class="flash-message <%= message.type %>">
                <%= message.text %>
            </div>
            <% } %>

                <h1>Pr√≥ximos Eventos</h1>

                <%# --- IN√çCIO DA BARRA DE FILTRO --- %>
                    <form action="/site/eventos/todos" method="GET" class="filter-bar">
                        <div class="form-group filter-search">
                            <input type="text" name="search" class="form-control" placeholder="Buscar por nome..."
                                value="<%= searchQuery || '' %>">
                        </div>
                        <div class="form-group filter-category">
                            <select name="category" class="form-control">
                                <option value="Todos" <%=(categoryQuery==='Todos' || !categoryQuery) ? 'selected' : ''
                                    %>>Todas as Categorias</option>
                                <option value="Palestra" <%=categoryQuery==='Palestra' ? 'selected' : '' %>>Palestra
                                </option>
                                <option value="Workshop" <%=categoryQuery==='Workshop' ? 'selected' : '' %>>Workshop
                                </option>
                                <option value="Confer√™ncia" <%=categoryQuery==='Confer√™ncia' ? 'selected' : '' %>
                                    >Confer√™ncia</option>
                                <option value="Networking" <%=categoryQuery==='Networking' ? 'selected' : '' %>
                                    >Networking</option>
                                <option value="Cultural" <%=categoryQuery==='Cultural' ? 'selected' : '' %>>Cultural /
                                    Art√≠stico</option>
                                <option value="Outro" <%=categoryQuery==='Outro' ? 'selected' : '' %>>Outro</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-secondary">Filtrar</button>
                    </form>
                    <%# --- FIM DA BARRA DE FILTRO --- %>

                        <div class="event-list">

                            <% events.forEach(event=> { %>
                                <div class="event-card">

                                    <%# --- 1. ADICIONE ESTE BLOCO DA IMAGEM --- %>
                                        <% if (event.cover_image_url) { %>
                                            <a href="/site/eventos/<%= event.id %>" class="event-card-image-link"
                                                aria-hidden="true" tabindex="-1">
                                                <img src="<%= event.cover_image_url %>" alt=""
                                                    class="event-card-image-novo">
                                            </a>
                                            <% } %>
                                                <%# --- FIM DO BLOCO DA IMAGEM --- %>

                                                    <%# --- TAG DE CATEGORIA ADICIONADA --- %>
                                                        <% if (event.category && event.category !=='Indefinido' ) { %>
                                                            <span class="event-card-category">
                                                                <%= event.category %>
                                                            </span>
                                                            <% } %>

                                                                <%# --- AVISO DE EVENTO OCULTO --- %>
                                                                    <% if (event.is_hidden===1) { %>
                                                                        <span class="event-card-hidden">üëÅÔ∏è
                                                                            Oculto</span>
                                                                        <% } %>

                                                                            <%# CORRE√á√ÉO: O t√≠tulo agora √© um link %>
                                                                                <a href="/site/eventos/<%= event.id %>"
                                                                                    class="event-title-link">
                                                                                    <h3>
                                                                                        <%= event.title %>
                                                                                    </h3>
                                                                                </a>
                                                                                <%# --- IN√çCIO DO NOVO BLOCO DE DETALHES
                                                                                    --- %>
                                                                                    <div class="event-details">
                                                                                        <% if (event.schedule) { %>
                                                                                            <div class="detail-item">
                                                                                                üóìÔ∏è
                                                                                                <strong>In√≠cio:</strong>
                                                                                                <%= event.schedule.date_start
                                                                                                    ? new
                                                                                                    Date(event.schedule.date_start).toLocaleDateString('pt-BR',
                                                                                                    {timeZone: 'UTC' })
                                                                                                    : 'Data' %>
                                                                                                    <%= event.schedule.time_start
                                                                                                        ? ` √†s
                                                                                                        ${event.schedule.time_start}`
                                                                                                        : '' %>
                                                                                            </div>
                                                                                            <% if
                                                                                                (event.schedule.date_end)
                                                                                                { %>
                                                                                                <div
                                                                                                    class="detail-item">
                                                                                                    üóìÔ∏è
                                                                                                    <strong>Fim:</strong>
                                                                                                    <%= new
                                                                                                        Date(event.schedule.date_end).toLocaleDateString('pt-BR',
                                                                                                        {timeZone: 'UTC'
                                                                                                        }) %>
                                                                                                        <%= event.schedule.time_end
                                                                                                            ? ` √†s
                                                                                                            ${event.schedule.time_end}`
                                                                                                            : '' %>
                                                                                                </div>
                                                                                                <% } %>
                                                                                                    <% } %>

                                                                                                        <% if
                                                                                                            (event.pricing
                                                                                                            &&
                                                                                                            event.pricing.isFree==='false'
                                                                                                            ) { %>
                                                                                                            <div
                                                                                                                class="detail-item">
                                                                                                                üí∞
                                                                                                                <strong>Pre√ßo:</strong>
                                                                                                                <%= event.pricing.price
                                                                                                                    || 'Consultar valor'
                                                                                                                    %>
                                                                                                            </div>
                                                                                                            <% } else if
                                                                                                                (event.pricing)
                                                                                                                { %>
                                                                                                                <div
                                                                                                                    class="detail-item">
                                                                                                                    üí∞
                                                                                                                    <strong>Pre√ßo:</strong>
                                                                                                                    Gratuito
                                                                                                                </div>
                                                                                                                <% } %>
                                                                                    </div>
                                                                                    <%# --- FIM DO NOVO BLOCO DE
                                                                                        DETALHES --- %>
                                                                                        <p>
                                                                                            <%= event.description
                                                                                                || 'Este evento n√£o possui descri√ß√£o.'
                                                                                                %>
                                                                                        </p>

                                </div>
                                <% }) %>

                        </div>
    </div>

    <%- include('partials/footer') %>